{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "target": "esnext",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "module": "commonjs",

    "strict": true,
//    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
  }
}