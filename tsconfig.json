{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "target": "esnext",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "alwaysStrict": true,
    //    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./typings"
    ],
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}